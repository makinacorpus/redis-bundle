{
    "name": "makinacorpus/redis-bundle",
    "type" : "library",
    "description": " Redis API standalone client manager or optional Symfony bundle configurator",
    "homepage" : "http://github.com/makinacorpus/redis-bundle",
    "license" : "GPL-2",
    "authors": [
        {
            "name": "Pierre Rineau",
            "email": "pierre.rineau@makina-corpus.com"
        },
        {
            "name": "Makina Corpus",
            "homepage": "http://makina-corpus.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "MakinaCorpus\\RedisBundle\\": "."
        },
        "exclude-from-classmap": [
            "/src/Tests/"
        ]
    },
    "suggest" : {
        "psr/cache" : "For cache all backends usage",
        "symfony/dependency-injection" : "For notification formatters registration",
        "symfony/event-dispatcher" : "Allows notification to be tied to event subscribers"
    },
    "minimum-stability" : "dev",
    "require": {
        "psr/cache": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5",
        "predis/predis": "1.*",
        "symfony/dependency-injection": "^3.2",
        "symfony/event-dispatcher": "^3.2"
    }
}
